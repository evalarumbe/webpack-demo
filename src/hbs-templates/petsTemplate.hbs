{{#each pets}}
  <div class="pet">
    <div id="photo-column">
      <img src="{{photo}}" alt="Photo of {{name}}">
    </div>
    <div id="info-column">
      <h2>{{name}} <span class="species">{{species}}</span></h2>
      <p>Age: {{calculateAge birthYear}}</p>
      {{#if favFoods}}
      <h4 class="headline-bar">Favorite Foods</h4>
      <ul class="favorite-foods">
        {{#each favFoods}}
        {{!-- use 'this' to access favFoods[i] --}}
        {{!-- triple curlies to interpret HTML (e.g. strong tag in the input) --}}
          <li>{{{this}}}</li>
        {{/each}}
      </ul>
      {{/if}}
    </div>
  </div>
{{/each}}